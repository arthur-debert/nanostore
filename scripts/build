#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Build output directory
BIN_DIR="bin"

echo -e "${BLUE}${BOLD}Building nanostore...${NC}"
echo

# Clean and create build directories
echo -e "${BLUE}Setting up build directories...${NC}"
rm -rf "${BIN_DIR}"
mkdir -p "${BIN_DIR}"
echo -e "${GREEN}✓ Build directories ready${NC}"
echo

# Get version information from git
VERSION=$(git describe --tags --always --dirty 2>/dev/null || echo "dev")
COMMIT=$(git rev-parse --short HEAD 2>/dev/null || echo "unknown")
BUILD_DATE=$(date -u '+%Y-%m-%d_%H:%M:%S')

# Show build information
echo -e "${BLUE}Build Information:${NC}"
echo -e "  Version: ${BOLD}$VERSION${NC}"
echo -e "  Commit:  ${BOLD}$COMMIT${NC}"
echo -e "  Date:    ${BOLD}$BUILD_DATE${NC}"
echo

# Build all Go packages first
echo -e "${BLUE}Building all Go packages...${NC}"
if [ -f "vendor/modules.txt" ]; then
    # Use vendor if available
    if go build -mod=vendor -v ./...; then
        echo -e "${GREEN}✓ All packages built successfully${NC}"
    else
        echo -e "${RED}∅ Package build failed${NC}"
        exit 1
    fi
else
    # Fall back to normal build
    if go build -v ./...; then
        echo -e "${GREEN}✓ All packages built successfully${NC}"
    else
        echo -e "${RED}∅ Package build failed${NC}"
        exit 1
    fi
fi

# Build C bindings
echo
echo -e "${BLUE}Building C bindings...${NC}"
if [ -d "c-bindings" ] && [ -f "c-bindings/build.sh" ]; then
    # Call the c-bindings build script, passing the output directory
    if (cd c-bindings && ./build.sh "../${BIN_DIR}"); then
        echo -e "${GREEN}✓ C bindings built successfully${NC}"
    else
        echo -e "${RED}∅ C bindings build failed${NC}"
        exit 1
    fi
else
    echo -e "${YELLOW}[!] No c-bindings directory or build script found, skipping C library build${NC}"
fi

# Run tests if not skipped
if [[ "${SKIP_TESTS:-}" != "true" ]]; then
    echo
    echo -e "${YELLOW}Running tests...${NC}"
    TEST_CMD="go test ./... -short"
    if [ -f "vendor/modules.txt" ]; then
        TEST_CMD="go test -mod=vendor ./... -short"
    fi
    if $TEST_CMD; then
        echo -e "${GREEN}✓ All tests passed${NC}"
    else
        echo -e "${RED}∅ Tests failed${NC}"
        exit 1
    fi
else
    echo
    echo -e "${YELLOW}[!] Tests skipped (SKIP_TESTS=true)${NC}"
fi

echo
echo -e "${GREEN}${BOLD}Build completed successfully!${NC}"
echo -e "${BLUE}Build artifacts in: ${BOLD}${BIN_DIR}/${NC}"
ls -la "${BIN_DIR}/"